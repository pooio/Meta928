@using MetaShare.Common.Core.Presentation
@using Meta727.Entities
@using Meta727.Web.HtmlExtensions
@using Meta727.Web.Models
<!--add customized code between this region-->
<!--add customized code between this region-->

@model IndexViewModel<qwer>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
		<th class="text-left">Name</th>
		<th class="text-right">Num</th>
		<th class="text-left">Price</th>
		<th class="text-center">Phone</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (Model.TargetPager != null && Model.TargetPager.Datas != null)
            {
            foreach (Meta727.Entities.qwer qwerItem in Model.TargetPager.Datas)
                        {
                <tr>
			<td  class="text-left">
				@Html.DisplayFor(modelItem => qwerItem.Name)
			</td>
			<td class="text-right">
				@Html.DisplayFor(modelItem => qwerItem.Num)
			</td>
			<td class="text-left">
				@Html.DisplayFor(modelItem => qwerItem.Price)
			</td>
			<td class="text-center">
				@Html.DisplayFor(modelItem => qwerItem.Phone)
			</td>
                    <td>
                        @Html.ActionLink(" ", "Details", new { id = qwerItem.Id, Controller = "qwer", area = ""}, new {@class="m_details", title="Details" })
                        @Html.ActionLink(" ", "Edit", new { id = qwerItem.Id, Controller = "qwer", area = ""}, new {@class="m_edit", title="Edit" })
                        @Html.ActionLink(" ", "#", "#", new {href = "javascript:void(0);",@class="m_delete", title="Delete", onclick = " javascript:metaShare.basic.prototype.deleteTableColumn(this,'" + qwerItem.Id + "','" + Url.Action("Delete",new {Controller = "qwer", area = ""}) + "'); return false; "})
                    </td>
                </tr>
            }
            }
<!--add customized code between this region-->
<!--add customized code between this region-->
            </tbody>
        </table>


        <div class="UserPagerDiv text-center">
    @{
        object conditions = new
        {
            Name = Model.SearchModel != null ? Model.SearchModel.Name : "",
        };
    }
        @Ajax.AjaxRenderPager(Model.TargetPager, "Search", "qwer","qwer_DataList", conditions)
        </div>
